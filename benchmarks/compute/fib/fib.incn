# Fibonacci Benchmark
# Compute fib(N) iteratively, mod 10^9+7 to avoid overflow
# N = 1,000,000

def fib_mod(n: int, modulo: int) -> int:
    if n <= 1:
        return n
    
    mut prev = 0
    mut curr = 1
    
    for i in range(2, n + 1):
        next = (prev + curr) % modulo
        prev = curr
        curr = next
    
    return curr

def main() -> None:
    n = 1_000_000
    modulo = 1_000_000_007
    result = fib_mod(n, modulo)
    println(f"fib({n}) mod {modulo} = {result}")
