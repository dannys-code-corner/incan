"""Test control flow statements"""

def test_if_statements() -> None:
    x: int = 10
    
    # Simple if
    if x > 5:
        print("x is greater than 5")
    
    # If-else
    if x < 5:
        print("x is less than 5")
    else:
        print("x is not less than 5")
    
    # If-elif-else
    if x < 5:
        print("small")
    elif x < 15:
        print("medium")
    else:
        print("large")

def test_while_loops() -> None:
    # Basic while loop
    i: int = 0
    while i < 5:
        print(i)
        i += 1
    
    # While with break
    j: int = 0
    while True:
        if j >= 3:
            break
        print(j)
        j += 1
    
    # While with continue
    k: int = 0
    while k < 5:
        k += 1
        if k == 3:
            continue
        print(k)

def test_for_loops() -> None:
    # For loop over list
    numbers: list[int] = [1, 2, 3, 4, 5]
    for num in numbers:
        print(num)
    
    # For loop with range
    for i in range(5):
        print(i)
    
    # For loop with break
    for i in range(10):
        if i == 5:
            break
        print(i)
    
    # For loop with continue
    for i in range(5):
        if i == 2:
            continue
        print(i)

def test_nested_control_flow() -> None:
    # Nested loops
    for i in range(3):
        for j in range(3):
            if i == j:
                continue
            print(f"{i},{j}")

def main() -> None:
    test_if_statements()
    test_while_loops()
    test_for_loops()
    test_nested_control_flow()
