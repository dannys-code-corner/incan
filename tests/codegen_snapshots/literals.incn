def test_literals() -> None:
    # Integer literals
    x: int = 42
    y: int = -10
    big: int = 1_000_000
    
    # Float literals
    pi: float = 3.14
    neg: float = -2.5
    sci: float = 1.5e10
    
    # String literals
    greeting: str = "hello"
    multiline: str = "hello\nworld"
    quote: str = 'single'
    
    # Boolean literals
    yes: bool = True
    no: bool = False
    
    # None literal (Optional type)
    maybe: Option[int] = None


def main() -> None:
    test_literals()
